                            <div class="form-group">
                                <label label asp-for="LeaveFormVM.FromDate"></label>
                                <input style="text-align:left" type="text" asp-for="LeaveFormVM.FromDate" class="form-control datepicker">
                                <span asp-validation-for="LeaveFormVM.FromDate" class="text-danger" />
                            </div>

                            <div class="form-group">
                                <label asp-for="LeaveFormVM.ToDate"></label>
                                <input style="text-align:left" type="text" asp-for="LeaveFormVM.ToDate" class="form-control datepicker">
