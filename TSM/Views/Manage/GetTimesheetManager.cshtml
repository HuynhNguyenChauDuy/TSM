@section jvscript{
    <script src="~/DatePicker/js/bootstrap-datepicker.js"></script>
    <script src="~/DataTables-1.10.15/media/js/jquery.dataTables.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/toastr-master/toastr.min.js"></script>

    <!--DatePicker-->
    <script>
        var curDate = new Date();
        $(document).ready(function () {
            $('.input-daterange').datepicker({
                format: 'dd/mm/yyyy',
                startDate: curDate
            });
        });
    </script>

    <!--DataTable-->
    <script>
        $(document).ready(function () {
            $('#MainTable').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': true,
                'ordering': true,
                'info': true,
                'autoWidth': true,
                'aoColumnDefs': [{
                    'bSortable': false,
                    'aTargets': ['nosort']
                }]
            });

            // prevent 'onclick' handler for checkbox
            $('#MainTable tr').find('input[name="subCheckbox"]').on('click', function (e) {
                //e.preventDefault();
                e.stopPropagation();
            });

            $('#MainTable tbody').on('click', 'tr', function (event) {
                var leaveId = $(this).closest('tr').find('td:last').html().toString();
                $('#LeaveHandleVM_LeaveID').val(leaveId);

                var targetUrl = '@Url.Action("GetLeaveDetail", "Manage")?leaveId=' + leaveId;
                $.ajax({
                    url: targetUrl,
                    type: "GET",
                    dataType: 'json',
                    contentType: "application/json; charset=utf-8",
                    success: function (result) {
                        if (result != null)
                        {
                            $('#DetailVM_leaveID').val(result['leaveID']);
                            $("label[id='DetailVM_employeeName']").html(result['userName']);
                            $("label[id='DetailVM_submittedDate']").html(result['submittedDate']);
                            $("label[id='DetailVM_fromDate']").html(result['fromDate']);
                            $("label[id='DetailVM_toDate']").html(result['toDate']);
                            $("label[id='DetailVM_leaveType']").html(result['leaveType']);
                            $("label[id='DetailVM_approvedDate']").html(result['approvedDate']);
                            $("text[id='DetailVM_note']").html(result['note']);
                            $("label[id='DetailVM_Approver']").html(result['approver']);
                            $('#DetailVM_note').val(result['note']);

                            var statusClass = '';
                            var statusName = '';

                            var state = result['state'];
                            if (state != '2')
                            {
                                if (state == '0')
                                {
                                    statusClass = 'label label-success'
                                    statusName = 'Approved';
                                }
                                else
                                {
                                    statusClass = 'label label-danger'
                                    statusName = 'Rejected';
                                }

                                $("button[id='DetailVM_approve']").hide();
                                $("button[id='DetailVM_reject']").hide();
                            }
                            else
                            {
                                statusClass = 'label label-warning';
                                statusName = 'Waiting';

                                $("button[id='DetailVM_approve']").show();
                                $("button[id='DetailVM_reject']").show();
                            }

                            var workShiftName = 'All Day';
                            var workShift = result['workShift'];
                            if (workShift == '1')
                                 {workShiftName = 'Morning'}
                            else if (workShift == '2')
                                 {workShiftName = 'Afternoon'}

                            $("label[id='DetailVM_state']").html(statusName);
                            $("label[id='DetailVM_workShift']").html(workShiftName);
                            $("label[id='DetailVM_state']").addClass(statusClass);

                            $('#DetailMD').modal('show');
                        }
                        else
                        {
                            alert('Something goes wrong, please refresh the page');
                        }
                    },
                    error: function () {
                        alert('Fail to connect to server, please contact IT department for support');
                    }
                });
            });
        });
    </script>

    <!--Handle Single Request-->
    <script>
        function HandleSingleRequest(result) {
            $('input[id="LeaveHandleVM_Result"]').val(result);
            $("#HandleSingleRequest").submit();
        };
    </script>

    <!--Checkbox - Check All-->
    <script>
        $('#cbCheckAll').click(function () {
            if ($('#cbCheckAll').is(':checked')) {
                $('input[name="subCheckbox"]').prop('checked', true);
            }
            else {
                $('input[name="subCheckbox"]').prop('checked', false);
            }
        });
    </script>

    <!--handle Multiple request  -->
    <script>
        $(document).ready(function () {
            $('#btnApproveAll').click(function () {
                $('#MainTable tbody tr').each(function () {
                    var leaveId = $(this).closest('tr').find('td:last').html().toString();
                    var str = '<input hidden type="text" name="LeaveHandleVM_Multiple.LeaveID" value="' + leaveId + '" />';

                    $('#HandleMultipleRequests').append(str);
                });

                var result = 'Approved';
                var str2 = '<input hidden type="text" name="LeaveHandleVM_Multiple.Result" value="' + result + '" />';
                $('#HandleMultipleRequests').append(str2);
                $('#HandleMultipleRequests').submit();
            });


            $('#btnApproveChecked').click(function () {
                $('#MainTable tbody tr').find('input:checkbox:checked').each(function () {
                    var leaveId = $(this).closest('tr').find('td:last').html().toString();

                    var str = '<input hidden type="text" name="LeaveHandleVM_Multiple.LeaveID" value="' + leaveId + '" />';

                    $('#HandleMultipleRequests').append(str);
                });

                var result = 'Approved';
                var str2 = '<input hidden type="text" name="LeaveHandleVM_Multiple.Result" value="' + result + '" />';
                $('#HandleMultipleRequests').append(str2);
                $('#HandleMultipleRequests').submit();
            });

            $('#btnRejectChecked').click(function () {
                $('#MainTable tbody tr').find('input:checkbox:checked').each(function () {
                    var leaveId = $(this).closest('tr').find('td:last').html().toString();

                    var str = '<input hidden type="text" name="LeaveHandleVM_Multiple.LeaveID" value="' + leaveId + '" />';

                    $('#HandleMultipleRequests').append(str);
                });

                var result = 'Rejected';
                var str2 = '<input hidden type="text" name="LeaveHandleVM_Multiple.Result" value="' + result + '" />';
                $('#HandleMultipleRequests').append(str2);
                $('#HandleMultipleRequests').submit();
            });
        });
    </script>
}

<section class="content-header">
    <div class="row">
        <div class="col-sm-6">
            <h1>TIMESHEET MANAGER</h1>
        </div>
        <div class="col-sm-6">
            <h1>
                <span class="pull-right">
                    <button id="btnApproveAll" data-toggle="modal" type="button" class="btn btn-success ion-android-done-all"> Approve All</button>
                    <button id="btnApproveChecked" data-toggle="modal" type="button" class="btn btn-bitbucket ion-android-checkbox-outline"> Approve Checked</button>
                    <button id="btnRejectChecked" data-toggle="modal" type="button" class="btn btn-danger ion-android-close"> Reject Checked</button>
                </span>
            </h1>
        </div>
    </div>


    <form hidden role="form" id="HandleMultipleRequests" method="post" asp-controller="Manage" asp-action="HandleMultipleRequests"></form>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Leave Of Absence</h3>
                </div>
                <div class="box-body" style="overflow:auto">
                    <table id="MainTable" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>@Html.DisplayNameFor(Model => Model.LeaveVMForDisplay.UserName)</th>
                                <th>@Html.DisplayNameFor(Model => Model.LeaveVMForDisplay.LeaveType)</th>
                                <th>@Html.DisplayNameFor(Model => Model.LeaveVMForDisplay.WorkShift)</th>
                                <th>@Html.DisplayNameFor(Model => Model.LeaveVMForDisplay.FromDate)</th>
                                <th>@Html.DisplayNameFor(Model => Model.LeaveVMForDisplay.ToDate)</th>
                                <th>@Html.DisplayNameFor(Model => Model.LeaveVMForDisplay.State)</th>
                                <th class="nosort"><input id="cbCheckAll" type="checkbox" /></th>
                                <th name="LeaveID" hidden></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 1;
                                foreach (var item in Model.LeaveVM)
                                {
                                    <tr>
                                        <td>@i.ToString()</td>
                                        <td>@Html.DisplayFor(m => item.UserName)</td>
                                        <td>@Html.DisplayFor(m => item.LeaveType)</td>
                                        <td>@Html.DisplayFor(m => item.WorkShift)</td>
                                        <td>@Html.DisplayFor(m => item.FromDate)</td>
                                        <td>@Html.DisplayFor(m => item.ToDate)</td>
                                        @if (item.State == TSM.Data.Models.Leave.eState.OnQueue)
                                        {
                                            <td><label class="label label-warning">&nbsp;&nbsp;Waiting&nbsp;</label></td>
                                            <td><input type="checkbox" id="subCheckbox" name="subCheckbox"></td>
                                        }
                                        else
                                        {
                                            if (item.State == TSM.Data.Models.Leave.eState.Approved)
                                            {
                                                <td><label class="label label-success">Approved</label></td>
                                            }
                                            else
                                            {
                                                <td><label class="label label-danger">Rejected</label></td>
                                            }
                                            <td class="no-Event"></td>
                                        }
                                        <td hidden>@item.LeaveID</td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Detail pop-up -->
    <div class="modal fade" id="DetailMD" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="modal-title">
                        <h3 class="pull-left">
                            <label>Leave Details</label>s
                            <label id="DetailVM_state"></label>
                        </h3>
                        <button type="button" class="close" data-dismiss="modal">x</button>
                    </div>
                </div>
                <div class="modal-body col-sm-12">
                    <form role="form" id="HandleSingleRequest" method="post" asp-controller="Manage" asp-action="HandleSingleRequest">
                        <input hidden asp-for="LeaveHandleVM.LeaveID" />
                        <input hidden asp-for="LeaveHandleVM.Result" />
                        <div class="row">
                            <div class="form-group col-sm-6">
                                @Html.LabelFor(Model => Model.LeaveVMForDisplay.UserName)
                                <div class="cus_left">
                                    <label id="DetailVM_employeeName"></label>
                                </div>
                            </div>
                            <div class="form-group col-sm-6">
                                @Html.LabelFor(Model => Model.LeaveVMForDisplay.LeaveType)
                                <div class="cus_left"><label class="" id="DetailVM_leaveType"></label></div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-sm-6">
                                @Html.LabelFor(Model => Model.LeaveVMForDisplay.FromDate)
                                <div class="cus_left"><label class="" id="DetailVM_fromDate"></label></div>
                            </div>
                            <div class="form-group col-sm-6">
                                @Html.LabelFor(Model => Model.LeaveVMForDisplay.ToDate)
                                <div class="cus_left"><label class="" id="DetailVM_toDate"></label></div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-sm-6">
                                @Html.LabelFor(Model => Model.LeaveVMForDisplay.SubmittedDate)
                                <div class="cus_left"><label class="" id="DetailVM_submittedDate"></label></div>
                            </div>
                            <div class="form-group col-sm-6">
                                @Html.LabelFor(Model => Model.LeaveVMForDisplay.WorkShift)
                                <div class="cus_left"><label class="" id="DetailVM_workShift"></label></div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-sm-6">
                                @Html.LabelFor(Model => Model.LeaveVMForDisplay.Approver)
                                <div class="cus_left"><label class="" id="DetailVM_Approver"></label></div>
                            </div>
                            <div class="form-group col-sm-6">
                                @Html.LabelFor(Model => Model.LeaveVMForDisplay.ApprovedDate)
                                <div class="cus_left"><label class="" id="DetailVM_approvedDate"></label></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12">
                                @Html.LabelFor(Model => Model.LeaveVMForDisplay.Note)
                                <div class="cus_leftai"><text class="" id="DetailVM_note"></text></div>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                        <div class="col-sm-12">
                            <div class="pull-right">
                                <button id="DetailVM_approve" onclick="HandleSingleRequest('Approved')" type="button" class="btn btn-success">&nbsp;Approve</button>
                                <button id="DetailVM_reject" onclick="HandleSingleRequest('Rejected')" type="button" class="btn btn-danger">&nbsp;Reject&nbsp;</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




